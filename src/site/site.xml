<site xmlns="http://maven.apache.org/SITE/2.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/SITE/2.0.0 https://maven.apache.org/xsd/site-2.0.0.xsd"
  name="${project.name}">

    <skin>
        <groupId>org.apache.maven.skins</groupId>
        <artifactId>maven-fluido-skin</artifactId>
        <version>${dep.plugin.maven-fluido-skin.version}</version>
    </skin>

    <bannerLeft name="${project.name}"/>

    <custom>
        <fluidoSkin/>
    </custom>

    <version position="left"/>
    <publishDate position="right"/>

    <body>

        <breadcrumbs/>

        <links>
            <item name="About ${project.name}" href="index.html" />
            <item name="${project.name} (Github)" href="${project.url}" target="_blank"/>
            <item name="Jackcess (Github)" href="${githubBaseUrl}jackcess/" target="_blank"/>
            <item name="UCanAccess (Github)" href="${githubBaseUrl}ucanaccess" target="_blank"/>
            <item name="Maven Central" href="https://central.sonatype.com/artifact/${project.groupId}/${project.artifactId}/" target="_blank"/>
            <item name="Legacy project (SourceForge)" href="https://sourceforge.net/projects/jackcessencrypt/" target="_blank"/>
        </links>

        <menu ref="reports"/>
        <menu ref="modules"/>

    </body>

</site>
